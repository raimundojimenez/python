s = 'azcbobobegghakl'

sstr = 'bob'

ntimes = s.count(sstr)

print 'Number of times bob occurs is:', ntimes

---

ntimes = s.count('bob')

print 'Number of times bob occurs is:', ntimes

---

sstr = 'bob'
ntimes = 0
spos = 0

spos = s.find(sstr, spos)

while (spos >=0):
    ntimes+=1
    spos = s.find(sstr, spos+1)
        
print 'Number of times bob occurs is:', ntimes
